NiActorManager* sdKfmResource::GetActorManager()
{
	return m_spActorManager;
}
//-------------------------------------------------------------------------------------------------
bool sdKfmResource::Loaded()
{
	return m_spActorManager != 0;
}
//-------------------------------------------------------------------------------------------------
bool sdKfmResource::Freed()
{
	if (!m_spActorManager)
		return true;

	return m_bReleaseOnGC;
}
